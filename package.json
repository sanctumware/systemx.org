{
  "name": "kevin-lin",
  "version": "1.0.0",
  "description": "Personal website and portfolio",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-css && npm run build-js",
    "build-js": "mkdir -p dist && ./node_modules/.bin/webpack --config config/webpack.js",
    "build-css": "mkdir -p dist && sass --style compressed src/client/styles/main.scss:dist/main.css",
    "build-js-watch": "mkdir -p dist && ./node_modules/.bin/webpack --config config/webpack.js --watch --colors",
    "build-css-watch": "mkdir -p dist && sass --watch --style compressed src/client/styles/main.scss:dist/main.css",
    "start": "node index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git@git.kevinlin.info:personal-projects/kevin-lin-main.git"
  },
  "author": "Kevin Lin <developer@kevinlin.info>",
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.11.4",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-helmet": "^3.1.0",
    "react-router": "^2.6.1",
    "xtend": "^4.0.1"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "webpack": "^1.13.1"
  }
}
