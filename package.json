{
  "name": "kevin-lin",
  "version": "1.0.0",
  "description": "Personal website and portfolio",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-css && npm run build-js && npm run build-html",
    "build-js": "mkdir -p dist && webpack --config config/webpack.js",
    "build-css": "mkdir -p dist && sass --style compressed src/client/styles/main.scss:dist/main.css",
    "build-js-watch": "mkdir -p dist && webpack --config config/webpack.js --watch --colors",
    "build-css-watch": "mkdir -p dist && sass --watch --style compressed src/client/styles/main.scss:dist/main.css",
    "build-html": "pug src/client/index.pug -o dist",
    "build-test": "mkdir -p dist-test && webpack --config config/webpack-test.js",
    "start": "node index.js",
    "start-watch": "nodemon index.js",
    "lint": "eslint src test",
    "test": "npm run lint && npm run build-test && node dist-test | tap-spec"
  },
  "repository": {
    "type": "git",
    "url": "git@git.kevinlin.info:personal-projects/kevin-lin-main.git"
  },
  "author": "Kevin Lin <developer@kevinlin.info>",
  "license": "MIT",
  "dependencies": {
    "async": "^2.0.1",
    "babel-core": "^6.11.4",
    "body-parser": "^1.15.2",
    "browser-request": "^0.3.3",
    "cookie-parser": "^1.4.3",
    "csjs": "^1.1.0",
    "csjs-inject": "^1.0.1",
    "csurf": "^1.9.0",
    "deep-extend": "^0.4.1",
    "dottie": "^1.1.1",
    "express": "^4.14.0",
    "feed-read": "0.0.1",
    "humanize": "0.0.9",
    "just-last": "^1.1.23",
    "just-omit": "^1.0.1",
    "piwik-react-router": "^0.6.0",
    "pug": "^2.0.0-beta4",
    "raven": "^0.12.3",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-favicon": "0.0.5",
    "react-helmet": "^3.1.0",
    "react-preloader-icon": "0.0.7",
    "react-responsive": "^1.1.4",
    "react-router": "^2.6.1",
    "request": "^2.74.0",
    "safe-json-parse": "^4.0.0",
    "xtend": "^4.0.1"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^3.3.1",
    "eslint-config-uber-jsx": "^2.0.0",
    "eslint-plugin-react": "^6.1.2",
    "nodemon": "^1.11.0",
    "pug-cli": "^1.0.0-alpha6",
    "raw-loader": "^0.5.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0",
    "webpack": "^1.13.1"
  }
}
