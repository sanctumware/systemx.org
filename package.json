{
  "name": "kevin-lin-main",
  "version": "1.0.0",
  "description": "Personal website and portfolio",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-js && npm run build-html",
    "build-html": "pug src/client/templates/index.pug -o src/client/static/dist",
    "build-html-watch": "npm run build-html -- --watch",
    "build-js": "mkdir -p src/client/static/dist && webpack --config config/webpack",
    "build-js-watch": "npm run build-js -- --watch --colors",
    "start": "node index.js",
    "start-watch": "nodemon index.js",
    "dev": "concurrently --kill-others --prefix name --prefix-colors cyan.bold,yellow.bold,magenta.bold --names HTTP,JS,HTML 'npm run start-watch' 'npm run build-js-watch' 'npm run build-html-watch'",
    "lint": "eslint src test config",
    "test": "node test | tap-spec",
    "test-watch": "nodemon test | tap-spec",
    "cover": "istanbul cover test --print detail",
    "coveralls": "istanbul cover test --print detail && cat coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:LINKIWI/kevinlin.info.git"
  },
  "author": "Kevin Lin <developer@kevinlin.info>",
  "license": "MIT",
  "pre-commit": [
    "lint",
    "test"
  ],
  "dependencies": {
    "babel-core": "^6.11.4",
    "copy-to-clipboard": "^3.0.5",
    "csjs": "^1.0.6",
    "csjs-inject": "^1.0.1",
    "deep-extend": "^0.4.1",
    "dotenv": "^4.0.0",
    "dottie": "^1.1.1",
    "express": "^4.14.0",
    "is-array": "^1.0.1",
    "preact": "^8.1.0",
    "preact-compat": "^3.16.0",
    "range": "^0.0.3",
    "raven-js": "^3.10.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-favicon": "^0.0.5",
    "react-helmet": "^5.0.3",
    "react-icons": "^2.2.5",
    "react-router": "^2.6.1",
    "react-window-state": "^0.2.0",
    "styletron": "^2.5.7",
    "styletron-client": "^2.5.1",
    "styletron-react": "^2.5.2",
    "styletron-utils": "^2.5.1",
    "url-parse": "^1.1.8"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "concurrently": "^3.2.0",
    "coveralls": "^2.11.15",
    "enzyme": "^2.8.2",
    "eslint": "^3.17.1",
    "eslint-config-uber-jsx": "^3.0.1",
    "eslint-plugin-react": "^6.1.2",
    "istanbul": "^1.1.0-alpha.1",
    "jsdom": "^9.8.3",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "pug-cli": "^1.0.0-alpha6",
    "raw-loader": "^0.5.1",
    "react-addons-test-utils": "^15.4.1",
    "recursive-readdir": "^2.1.0",
    "sinon": "^1.17.6",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3",
    "webpack": "^1.13.1"
  }
}
